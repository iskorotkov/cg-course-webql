{
  "name": "hedgehog-engine",
  "version": "0.1.0",
  "description": "WebGL-based graphics engine",
  "main": "src/index.ts",
  "scripts": {
    "tsc-build": "yarn tsc -b",
    "tsc-watch": "yarn tsc -w",
    "sass-compile": "yarn sass ./styles/index.scss:dist/index.css",
    "sass-watch": "yarn sass ./styles/index.scss:dist/index.css --watch",
    "publish": "yarn && yarn run tsc-build && yarn run sass-compile && rm -rf ./publish && mkdir ./publish && cp -r ./dist ./publish/dist && cp -r ./lib ./publish/lib && cp -r ./resources ./publish/resources && cp index.html ./publish/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iskorotkov/hedgehog-engine.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "opengl",
    "webgl"
  ],
  "author": "iskorotkov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iskorotkov/hedgehog-engine/issues"
  },
  "homepage": "https://github.com/iskorotkov/hedgehog-engine#readme",
  "dependencies": {
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "es": "^0.7.3",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "sass": "^1.32.6",
    "stylelint": "^13.8.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "typescript": "^4.1.3"
  }
}
